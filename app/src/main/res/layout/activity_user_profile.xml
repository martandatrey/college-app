<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/dashboard_back"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImage"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_horizontal"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1px"
                android:src="@drawable/ic_person_black_24dp" />


            <TextView
                android:id="@+id/changeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change picture"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0b000000"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textColor="#000"
                android:text="Name"


                />

            <EditText
                android:id="@+id/rollNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0b000000"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:text="Roll no"


                />


            <EditText
                android:id="@+id/branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0b000000"
                android:padding="10dp"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:text="computer science"


                />


            <Spinner
                android:id="@+id/branchSpinner"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:entries="@array/college_branches"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone" />


            <EditText
                android:id="@+id/Year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0b000000"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:padding="10dp"
                android:text="Year"

                />

            <EditText
                android:id="@+id/semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0b000000"
                android:padding="10dp"
                android:textColor="#000"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:layout_marginTop="5dp"
                android:text="Semester"

                />


            <Spinner
                android:id="@+id/semSpinner"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:entries="@array/semester"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"

                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0b000000"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:padding="10dp"
                android:textColor="#000"
                android:inputType="textEmailAddress"
                android:layout_marginTop="5dp"
                android:text="ajaydy@gmail.com"

                />

            <EditText
                android:id="@+id/phoneNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0b000000"
                android:drawableRight="@drawable/ic_edit_black_24dp"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:padding="10dp"
                android:inputType="phone"
                android:maxLength="10"
                android:text="8696659400"

                />


            <TextView
                android:id="@+id/changePass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Change Password"
                android:textColor="#ec5353"
                android:textSize="15sp" />


            <Button
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="#ec407a"
                android:textColor="#000"
                android:layout_marginTop="30dp"
                android:text="Submit" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>
