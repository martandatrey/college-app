<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#9a5283c4"
    android:padding="10dp">


    <ImageView
        android:id="@+id/newNoticeAddImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:padding="3dp"
        android:background="@drawable/rectangle_box"
        android:src="@drawable/selectimage" />

    <LinearLayout
        android:id="@+id/reviewLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newNoticeAddImage"
        android:layout_marginTop="10dp"
        android:weightSum="2">


        <Button
            android:id="@+id/selectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Image"
            android:layout_marginRight="5dp"
            android:textAllCaps="false"
            android:background="#cc64f9ac"/>

        <Button
            android:id="@+id/DueDateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Due Date"
            android:layout_marginLeft="5dp"
            android:background="#d6b1f96e"
            android:textAllCaps="false" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TilteTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewLV">


        <EditText
            android:id="@+id/noticeTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Title " />


    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/addNoticeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TilteTextInput"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="SUBMIT"
        android:textColor="#fff"
        android:background="#9ae62a7e"
        android:textAllCaps="false"
        />

</RelativeLayout>