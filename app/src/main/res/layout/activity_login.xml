<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/back1"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student login"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#000"
        />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/loginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:padding="15dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/loginTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/loginId"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email/Mobile no"

                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passTextInput"
                android:layout_below="@id/loginTextInput">

                <EditText
                    android:id="@+id/loginPass"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:layout_below="@id/loginId"
                    android:hint="Password"
                    android:layout_marginTop="10dp"
                    android:inputType="textPassword"
                    />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_below="@id/passTextInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginBtn"
                android:textColor="#000"
                android:text="login"
                android:background="#60ffffff"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:layout_marginBottom="50dp"/>


        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
    <TextView
        android:id="@+id/registerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Not registered? Sign up."
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="#4f5c5c5c"/>
</RelativeLayout>
